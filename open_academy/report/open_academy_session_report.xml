<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="open_academy_session_report" model="ir.actions.report">
        <field name="name">Report of session</field>
        <field name="model">open.academy.session</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">open_academy.report_session_template</field>
        <field name="report_file">open_academy.report_session_template</field>
        <field name="attachment_use" eval="True" />
        <field name="binding_model_id" ref="model_open_academy_session" />
        <field name="binding_type">report</field>
    </record>

    <template id="report_session_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="sessions">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1 t-field="sessions.name">
                            <br></br>
                        </h1>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">start date</th>
                                    <th scope="col">end date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="table-primary">
                                    <td>
                                        <p t-field="sessions.start_date"></p>
                                    </td>
                                    <td>
                                        <p t-field="sessions.end_date"></p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br />
                        <br />
                        <br />
                        <br />
                        <h2>Attendes</h2>
                        <br />
                        <br />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Attended name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="sessions.attendees_ids" t-as="attended">
                                    <tr class="table-info">
                                        <td>
                                            <p t-field="attended.name"></p>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>